<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Yorum ve Derecelendirme Sistemi</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .star {
            font-size: 30px;
            cursor: pointer;
        }

            .star.selected {
                color: gold;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Emlak Değerlendirme</h1>
        <div id="rating" class="mb-3">
            <span>Derecelendir:</span>
            <span class="star" data-value="1">&#9733;</span>
            <span class="star" data-value="2">&#9733;</span>
            <span class="star" data-value="3">&#9733;</span>
            <span class="star" data-value="4">&#9733;</span>
            <span class="star" data-value="5">&#9733;</span>
        </div>
        <div class="mb-3">
            <textarea id="comment" class="form-control" placeholder="Yorumunuzu buraya yazın..." rows="3"></textarea>
        </div>
        <button id="submit" class="btn btn-primary">Gönder</button>

        <h2 class="mt-5">Yorumlar</h2>
        <input id="search" class="form-control mb-3" placeholder="Yorumlarda ara..." />
        <div id="comments-section" class="mt-3"></div>
    </div>

    <!-- Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        let selectedRating = 0;
        let comments = [];

        // Derecelendirme yıldızlarını seçme
        document.querySelectorAll('.star').forEach(star => {
            star.addEventListener('click', function () {
                selectedRating = this.getAttribute('data-value');
                document.querySelectorAll('.star').forEach(s => s.classList.remove('selected'));
                this.classList.add('selected');
            });
        });

        // Yorum ekleme
        document.getElementById('submit').addEventListener('click', function () {
            const commentText = document.getElementById('comment').value.trim();

            if (selectedRating === 0 || commentText === '') {
                alert('Lütfen bir derecelendirme ve yorum girin.');
                return;
            }

            const comment = {
                id: Date.now(),
                rating: selectedRating,
                text: commentText
            };

            comments.push(comment);
            renderComments();

            // Formu temizle
            document.getElementById('comment').value = '';
            selectedRating = 0;
            document.querySelectorAll('.star').forEach(s => s.classList.remove('selected'));
        });

        // Yorumları listeleme
        function renderComments() {
            const commentsSection = document.getElementById('comments-section');
            commentsSection.innerHTML = '';

            comments.forEach(comment => {
                const commentDiv = document.createElement('div');
                commentDiv.classList.add('comment', 'border', 'p-3', 'mt-3');
                commentDiv.innerHTML = `
                                    <strong>Derecelendirme: ${comment.rating} Yıldız</strong>
                                    <p>${comment.text}</p>
                                    <button class="btn btn-warning btn-sm me-2" onclick="editComment(${comment.id})">Düzenle</button>
                                    <button class="btn btn-danger btn-sm" onclick="deleteComment(${comment.id})">Sil</button>
                                `;
                commentsSection.appendChild(commentDiv);
            });
        }

        // Yorum düzenleme
        function editComment(id) {
            const comment = comments.find(c => c.id === id);
            if (comment) {
                document.getElementById('comment').value = comment.text;
                selectedRating = comment.rating;
                document.querySelectorAll('.star').forEach(star => {
                    star.classList.remove('selected');
                    if (star.getAttribute('data-value') == selectedRating) {
                        star.classList.add('selected');
                    }
                });
                comments = comments.filter(c => c.id !== id); // Yorum geçici olarak kaldırılır
                renderComments();
            }
        }

        // Yorum silme
        function deleteComment(id) {
            if (confirm('Bu yorumu silmek istediğinize emin misiniz?')) {
                comments = comments.filter(c => c.id !== id);
                renderComments();
            }
        }

        // Yorumlarda arama
        document.getElementById('search').addEventListener('input', function () {
            const searchText = this.value.toLowerCase();
            const filteredComments = comments.filter(comment =>
                comment.text.toLowerCase().includes(searchText)
            );

            const commentsSection = document.getElementById('comments-section');
            commentsSection.innerHTML = '';

            filteredComments.forEach(comment => {
                const commentDiv = document.createElement('div');
                commentDiv.classList.add('comment', 'border', 'p-3', 'mt-3');
                commentDiv.innerHTML = `
                                    <strong>Derecelendirme: ${comment.rating} Yıldız</strong>
                                    <p>${comment.text}</p>
                                    <button class="btn btn-warning btn-sm me-2" onclick="editComment(${comment.id})">Düzenle</button>
                                    <button class="btn btn-danger btn-sm" onclick="deleteComment(${comment.id})">Sil</button>
                                `;
                commentsSection.appendChild(commentDiv);
                {
                }
            });
        });
    </script>
</body>
</html>