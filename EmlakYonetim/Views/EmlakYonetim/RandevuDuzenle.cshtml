
@{
    ViewData["Title"] = "RandevuDuzenle";
}

@model Randevu


<h2>Randevu Düzenleme Formu</h2>
<form asp-action="RandevuDuzenle" asp-controller="EmlakYonetim" method="post">
    <div class="mx-auto col-md-7">
        <label asp-for="adSoyad">Ad Soyad</label>
        <input asp-for="adSoyad" class="form-control" required>
    </div>
    <div class="mx-auto col-md-7">
        <label asp-for="tel">Telefon</label>
        <input asp-for="tel" class="form-control" required>
    </div>
    <div class="mx-auto col-md-7">
        <label asp-for="ePosta">E-posta</label>
        <input asp-for="ePosta" class="form-control" required>
    </div>
    <div class="mx-auto col-md-7">
        <label asp-for="emlakci">Emlakçı</label>
        <input asp-for="emlakci" class="form-control" required>
    </div>
    <div class="mx-auto col-md-7">
        <label asp-for="ilanNo">İlan No</label>
        <input asp-for="ilanNo" class="form-control" required>
    </div>
    <div class="mx-auto col-md-7">
        <label asp-for="randevuTarihi">Randevu Tarihi</label>
        <input asp-for="randevuTarihi" class="form-control" type="date" required>
    </div>
    <div class="mx-auto col-md-7">
        <label asp-for="randevuSaati">Randevu Saati</label>
        <input asp-for="randevuSaati" class="form-control" type="time" required>
    </div>
    <div class="row">
        <div class="mx-auto col-md-7" style="padding:1%; text-align:center;">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Randevularım","EmlakYonetim")';">İptal</button>
        </div>
    </div>
</form>

